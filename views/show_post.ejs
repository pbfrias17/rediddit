<% include partials/header %>
<% include partials/sub_header %>

<div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= post.title %></h3>
    </div>
    <div class="panel-body">
      <%= post.body %>
    </div>
    <div class="panel-footer"><%= post.author.username %></div>
  </div>
</div>
<div class='container-fluid'>
  <h3>Post a comment</h3>
  <% var action = '/r/' + post.subrediddit + '/comments/' + post._id; %>
  <form method='POST' action=<%= action %>>
    <div class='form-group'>
      <textarea class='form-control' name='body' rows=4></textarea>
    </div>
    <div class='form-group'>
      <input class='btn btn-primary' type='submit' value='Comment'>
    </div>
  </form>
  <h3>Comments</h3>
  <ul>
    <% if(post.comments) { %>
      <% post.comments.forEach(function(comment) { %>
        <li>
          <div class='well'>
            <div class='votes'>
              <button id='vote_up'>UP</button>
              <div><h5><%= comment.votes.up - comment.votes.down %></h5></div>
              <button id='vote_down'>DOWN</button>
            </div>
            <div class='comment-body'>
              <h5><strong><%= comment.author.username + ' says:' %></strong></h5>
              <p><%= comment.body %></p>
            </div>
          </div>
        </li>
      <% }); %>
    <% } %>
  </ul>
</div>

<script>
  $('#vote_up').on('click', function(event) {
    $.post("https://rediddit-pbfrias17.c9users.io/r/dev/votes/58756f551d98c4334666d802");
  });
</script>
<% include partials/footer %>
